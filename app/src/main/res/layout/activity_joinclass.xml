<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".joinclass"
    android:background="@drawable/stdbackgrdpic">

    <Button
        android:id="@+id/socialjoin"
        android:layout_width="103dp"
        android:layout_height="53dp"
        android:layout_marginTop="564dp"
        android:backgroundTint="#0228F3"
        android:text="Social"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sciencejoin"
        android:layout_width="101dp"
        android:layout_height="57dp"
        android:layout_marginTop="488dp"
        android:backgroundTint="#0228F3"
        android:text="Science"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Englishjoin"
        android:layout_width="106dp"
        android:layout_height="53dp"
        android:layout_marginTop="272dp"
        android:backgroundTint="#0228F3"
        android:text="English"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.563"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hindijoin"
        android:layout_width="105dp"
        android:layout_height="54dp"
        android:layout_marginTop="340dp"
        android:backgroundTint="#0228F3"
        android:text="HIndi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.563"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/kanjoin"
        android:layout_width="105dp"
        android:layout_height="54dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="#0228F3"
        android:text="Kannada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.563"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/logo"
        app:civ_border_color="#ffffff"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/Mathsjoin"
        android:layout_width="107dp"
        android:layout_height="58dp"
        android:layout_marginTop="416dp"
        android:backgroundTint="#0228F3"
        android:text="Maths"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.563"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>